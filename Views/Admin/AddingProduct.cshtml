@using MVC.Models
@model List<Brand>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<html>
<head>
    <title>
    </title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
</head>
<body>
    <div style="background-color:darkgoldenrod">
        <h3 style="margin-left:20px; font-weight:500 ">Add Product</h3>
        <hr style="margin-left:20px; width:900px" />
    </div>

    <div style="background-color:darkkhaki">
        
    <form action="~/Admin/AddedProduct" class="form-horizontal" role="form" enctype="multipart/form-data" method="post">

        <div class="form-group">
            <label class="control-label col-lg-3" for="name">Name: </label>
            <div class="col-lg-4">
                <input type="text" class="form-control" data-val-required="Field is required" required name="name" placeholder="Enter Name" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-3" for="email">Description:</label>
            <div class="col-lg-4">
                <input type="text" class="form-control" data-val-required="Field is required" required name="description" placeholder="Enter description" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-3" for="pwd">Price:</label>
            <div class="col-lg-4">
                <input type="text" class="form-control" data-val-required="Field is required" required name="price" placeholder="Enter Price" />
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-lg-3" for="country">Status: </label>
            <div class="col-lg-4">
                <input type="text" class="form-control" data-val-required="Field is required" required name="status" placeholder="Enter status" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-3" for="gender">Color:</label>
            <div class="col-lg-4">
                <input style="margin-top:10px" type="text" class="form-control" data-val-required="Field is required" required name="color" placeholder="Enter Name of Color" />
            </div>
       
        </div>
        <div class="form-group">
            <label class="control-label col-lg-3" for="gender">Size:</label>
            <div class="col-lg-4">
                <input style="margin-top:10px" type="text" class="form-control" data-val-required="Field is required" required name="size" placeholder="Enter Size" />
            </div>
        </div>
        <div class="form-group">

            <label class="control-label col-lg-3" for="size">Upload File:</label>

            <div class="col-lg-4">
                <input type="file" name="image" />
            </div>

        </div>

        <div class="form-group">
            <label class=" control-label col-lg-3" for="brand">Brand</label>
            <div class="col-lg-4">
                <select name="brand" style="font-size:20px">
                    @foreach (Brand b in Model)
                    {
                        <option>@b.Name</option>

                    }
                </select>
            </div>
            <ul></ul>

        </div>

        <div class="form-group">
            <div class="col-lg-offset-3 col-lg-10">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>

    </form>
</div> 


</body>
</html>





