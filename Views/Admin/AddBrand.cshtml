@using MVC.Models
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@{
    MyEntities ctx = new MyEntities();
    IEnumerable<Categories> list = ctx.Categories.ToList();
}
<h5 style="background-color:darkgoldenrod; font-size:20px">Add Brand</h5>
<div style="background-color:darkkhaki">
<form action="~/Admin/AddingBrand" class="form-horizontal" role="form" method="post">

    <div class="form-group">
        <label class="col-lg-3 control-label" style="font-size:20px">Categories: </label>
        <div class="col-lg-3 ">
            <select id="CategorySelector" name="sid" style="font-size:20px">

                @foreach (var v in list)
                {
                    <option value="@v.Id">@v.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group" id="d1">
    </div>

    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-10">
            <input type="submit" value="Submit" class="btn btn-success" />
        </div>
    </div>
</form>
    </div>
<script>

    $('#CategorySelector').change(function () {
        var value = $('#CategorySelector').val();

        $('#d1').load('/Admin/Brand_Addd?cat=' + value);
    });

</script>






